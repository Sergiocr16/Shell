            <column name="cv" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="vc" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="ev" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="comentario" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="lanzamiento_id" type="bigint">
                <constraints nullable="true" />
